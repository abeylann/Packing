<p id="notice"><%= notice %></p>

<h1>My Lists</h1>

<table>
  <thead>
    <tr>
      <th>Place</th>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_lists.each do |my_list| %>
      <tr>
        <td><%= my_list.place_id %></td>
        <td><%= my_list.name %></td>
        <td><%= my_list.date %></td>
        <td><%= link_to 'Show', my_list %></td>
        <td><%= link_to 'Edit', edit_my_list_path(my_list) %></td>
        <td><%= link_to 'Destroy', my_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_my_list_path %>
